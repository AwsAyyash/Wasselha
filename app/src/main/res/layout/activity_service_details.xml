<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_selver"
    tools:context=".Customer.ServiceDetailsActivity">

    <TextView
        android:id="@+id/serviceDetailsMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/service_details_main_title"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:textSize="30sp"
        android:fontFamily="@font/changasemibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/serviceDetailsMainTitle"
        app:srcCompat="@drawable/car1"
        tools:layout_editor_absoluteX="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:background="@drawable/service_details_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:id="@+id/transporterNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/light_selver"
                android:text="@string/transporter_name_in_customer_recyclerView" />

            <TextView
                android:id="@+id/transporterNameInServiceDetailsPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:text="Mohammad"
                android:textColor="@color/dark_yellow2"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/cardImageView"
            app:layout_constraintTop_toBottomOf="@+id/transporterNameLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/light_selver"
                android:text="@string/time_in_customer_recyclerView" />

            <TextView
                android:id="@+id/timeInCustomerRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/dark_yellow2"
                android:textStyle="bold"
                android:text="9:00 AM" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pathLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/cardImageView"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:id="@+id/path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/path_in_service_details_page"
                android:textSize="18sp"
                android:textColor="@color/light_selver"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sourceCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramallah"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/dark_yellow2"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="to"
                android:textColor="@color/light_selver"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destinationCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nablus"
                android:textSize="18sp"
                android:textColor="@color/dark_yellow2"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicleTypeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/cardImageView"
            app:layout_constraintTop_toBottomOf="@+id/transporterNameLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/light_selver"
                android:text="Vehicle type:" />

            <TextView
                android:id="@+id/vehicleTypeInServiceDetailsPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/dark_yellow2"
                android:textStyle="bold"
                android:text="@string/vehicle_type_in_service_details_page" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/cardImageView"
            app:layout_constraintTop_toBottomOf="@+id/transporterNameLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/light_selver"
                android:text="@string/price_in_service_details_page" />

            <TextView
                android:id="@+id/priceInServiceDetailsPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textColor="@color/dark_yellow2"
                android:textStyle="bold"
                android:text="150" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reserveBtnServiceDetailsPage"
            style="@android:style/Widget.Button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="@drawable/reserve_btn_background"
            android:text="@string/reserve_btn_in_service_details_page"
            android:textColor="@color/dark_green"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>